{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Rules for enforcing reusable components instead of raw HTML elements",
  "rules": [
    {
      "name": "No raw button elements",
      "pattern": "<button",
      "message": "Use <Button> or <IconButton> component from @/shared/ui instead of raw <button> elements",
      "suggestion": "import { Button, IconButton } from '@/shared/ui'",
      "severity": "warning",
      "excludePaths": [
        "src/shared/ui/Button/",
        "src/shared/ui/shadcn/",
        "src/shared/ui/Modal/",
        "src/features/auth/",
        "*.test.tsx",
        "*.test.ts",
        "*.spec.tsx",
        "*.spec.ts",
        "*.stories.tsx",
        "*.stories.ts"
      ]
    },
    {
      "name": "No raw input elements",
      "pattern": "<input\\s",
      "message": "Use reusable input components instead of raw <input> elements. Available components: Input, FormInput, AuthInput, SearchInput, PhoneInput, FileInput, Checkbox, Toggle",
      "suggestion": "import { Input, FormInput, AuthInput, SearchInput, PhoneInput, FileInput, Checkbox, Toggle } from '@/shared/ui'",
      "severity": "error",
      "excludePaths": [
        "src/shared/ui/Input/",
        "src/shared/ui/shadcn/",
        "src/shared/ui/PhoneInput/",
        "src/shared/ui/AuthInput/",
        "src/shared/ui/FormInput.tsx",
        "src/shared/ui/SearchInput/",
        "src/shared/ui/FileInput/",
        "src/shared/ui/NumberInput/",
        "src/shared/ui/DateInput/",
        "src/shared/ui/TimeInput/",
        "src/shared/ui/MaskedInput/",
        "src/shared/ui/Autocomplete/",
        "src/shared/ui/Checkbox/",
        "src/shared/ui/Toggle/",
        "src/shared/ui/RadioGroup/",
        "src/shared/ui/ApiDropdown/",
        "src/shared/ui/UiDropdown/",
        "*.test.tsx",
        "*.test.ts",
        "*.spec.tsx",
        "*.spec.ts",
        "*.stories.tsx",
        "*.stories.ts"
      ]
    },
    {
      "name": "No raw textarea elements",
      "pattern": "<textarea\\s",
      "message": "Use <Textarea> or <AuthInput inputType='textarea'> component from @/shared/ui instead of raw <textarea> elements",
      "suggestion": "import { Textarea, AuthInput } from '@/shared/ui'",
      "severity": "error",
      "excludePaths": [
        "src/shared/ui/Textarea/",
        "src/shared/ui/shadcn/",
        "src/shared/ui/AuthInput/",
        "*.test.tsx",
        "*.test.ts",
        "*.spec.tsx",
        "*.spec.ts",
        "*.stories.tsx",
        "*.stories.ts"
      ]
    },
    {
      "name": "No raw select elements",
      "pattern": "<select\\s",
      "message": "Use <Select>, <ApiDropdown>, or <UiDropdown> component from @/shared/ui instead of raw <select> elements",
      "suggestion": "import { Select, ApiDropdown, UiDropdown } from '@/shared/ui'",
      "severity": "error",
      "excludePaths": [
        "src/shared/ui/Select/",
        "src/shared/ui/ApiDropdown/",
        "src/shared/ui/UiDropdown/",
        "*.test.tsx",
        "*.test.ts",
        "*.spec.tsx",
        "*.spec.ts",
        "*.stories.tsx",
        "*.stories.ts"
      ]
    },
    {
      "name": "Prefer Input component over FormInput",
      "pattern": "<input\\s+[^>]*type\\s*=\\s*[\"'](?:text|email|password|number|tel|url)[\"']",
      "message": "Use Input, FormInput, or AuthInput components instead of raw <input> elements with type attributes",
      "suggestion": "Available input components: Input (basic), FormInput (full-featured), AuthInput (auth pages), SearchInput (search), PhoneInput (phone numbers)",
      "severity": "error",
      "excludePaths": [
        "src/shared/ui/",
        "src/shared/ui/Badge/",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "Use Avatar component for user initials",
      "pattern": "w-[0-9]+ h-[0-9]+.*rounded.*bg-primary.*justify-center",
      "message": "Use <Avatar> component for user avatars and initials",
      "suggestion": "import { Avatar } from '@/shared/ui'",
      "severity": "warning",
      "excludePaths": [
        "src/shared/ui/Avatar/",
        "src/shared/ui/Modal/",
        "src/features/auth/",
        "src/shared/widgets/forms/OrganizationForm.tsx",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "No raw loading spinners",
      "pattern": "animate-spin",
      "message": "Use <LoadingSpinner> or <LoadingOverlay> component",
      "suggestion": "import { LoadingSpinner, LoadingOverlay } from '@/shared/ui'",
      "severity": "warning",
      "excludePaths": [
        "src/shared/ui/LoadingSpinner/",
        "src/shared/ui/shadcn/",
        "src/shared/ui/Button/",
        "src/shared/ui/FormInput.tsx",
        "src/shared/ui/UiDropdown/",
        "src/shared/ui/ApiDropdown/",
        "src/shared/widgets/forms/OrganizationForm.tsx",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "Use Alert component for info/warning/error boxes",
      "pattern": "bg-(red|blue|green|orange)-500/10.*border-(red|blue|green|orange)-500/30",
      "message": "Use <Alert> component for info/warning/error messages",
      "suggestion": "import { Alert } from '@/shared/ui'",
      "severity": "error",
      "excludePaths": [
        "src/shared/ui/Alert/",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "Use AddressFormGroup for address fields",
      "pattern": "label\\s*=\\s*[\"'](Address Line 1|City|State|ZIP)",
      "message": "Use <AddressFormGroup> component instead of individual address fields",
      "suggestion": "import { AddressFormGroup } from '@/shared/ui'",
      "severity": "error",
      "excludePaths": [
        "src/shared/ui/AddressFormGroup/",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "No hardcoded primary color",
      "pattern": "#D417C8",
      "message": "Use 'primary' design token instead of hardcoded #D417C8",
      "suggestion": "Replace with: text-primary, bg-primary, border-primary",
      "severity": "error",
      "excludePaths": [
        "tailwind.config.ts",
        "tailwind.config.js",
        "src/shared/config/constants.ts",
        "src/shared/constants/designTokens.ts",
        "src/index.css",
        "*.md",
        "*.test.tsx",
        "*.svg"
      ]
    },
    {
      "name": "No hardcoded secondary color",
      "pattern": "#14BDEA",
      "message": "Use 'secondary' design token instead of hardcoded #14BDEA",
      "suggestion": "Replace with: text-secondary, bg-secondary, border-secondary",
      "severity": "error",
      "excludePaths": [
        "tailwind.config.ts",
        "tailwind.config.js",
        "src/shared/config/constants.ts",
        "src/shared/constants/designTokens.ts",
        "src/index.css",
        "*.md",
        "*.test.tsx",
        "*.svg"
      ]
    },
    {
      "name": "No hardcoded accent color",
      "pattern": "#7767DA",
      "message": "Use 'accent' design token instead of hardcoded #7767DA",
      "suggestion": "Replace with: text-accent, bg-accent, border-accent",
      "severity": "error",
      "excludePaths": [
        "tailwind.config.ts",
        "tailwind.config.js",
        "src/shared/config/constants.ts",
        "src/shared/constants/designTokens.ts",
        "src/index.css",
        "*.md",
        "*.test.tsx",
        "*.svg"
      ]
    },
    {
      "name": "No hardcoded success colors",
      "pattern": "#(42E695|38D39F)",
      "message": "Use 'success' design token for success/active states",
      "suggestion": "Replace with: text-success, bg-success, border-success",
      "severity": "error",
      "excludePaths": [
        "tailwind.config.ts",
        "tailwind.config.js",
        "src/shared/config/constants.ts",
        "src/shared/constants/designTokens.ts",
        "src/index.css",
        "*.md",
        "*.test.tsx",
        "*.svg"
      ]
    },
    {
      "name": "No undocumented teal color",
      "pattern": "#00BCD4",
      "message": "Color #00BCD4 is not in design system. Use secondary instead.",
      "suggestion": "Replace with: text-secondary, bg-secondary/10, etc.",
      "severity": "error",
      "excludePaths": [
        "*.md",
        "*.test.tsx"
      ]
    },
    {
      "name": "No undocumented blue color",
      "pattern": "#32A1E4",
      "message": "Color #32A1E4 is not in design system. Use secondary or accent instead.",
      "suggestion": "Replace with: text-secondary (#14BDEA) or text-accent (#7767DA)",
      "severity": "error",
      "excludePaths": [
        "*.md",
        "*.test.tsx",
        "*.svg"
      ]
    },
    {
      "name": "No custom padding in modal children",
      "pattern": "<Modal[^>]*>[\\s\\S]*?<(?:div|form)[^>]*\\bp-6\\b",
      "message": "Modal component provides padding. Remove custom p-6 from direct children.",
      "suggestion": "Remove p-6 from modal content - Modal provides px-6 py-6 automatically",
      "severity": "warning",
      "excludePaths": [
        "src/shared/ui/Modal/",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "No custom overflow in modal children",
      "pattern": "<Modal[^>]*>[\\s\\S]*?(?:max-h-\\[|overflow-y-)",
      "message": "Modal component handles overflow. Remove custom overflow/max-height.",
      "suggestion": "Remove overflow and max-h classes - Modal handles scrolling automatically",
      "severity": "warning",
      "excludePaths": [
        "src/shared/ui/Modal/",
        "*.test.tsx",
        "*.stories.tsx"
      ]
    },
    {
      "name": "Enforce standard 36px height",
      "pattern": "h-10\\\\b",
      "message": "Use h-9 (36px) for standard inputs and buttons instead of h-10",
      "suggestion": "Replace 'h-10' with 'h-9'",
      "severity": "warning",
      "excludePaths": [
        "src/shared/ui/shadcn/",
        "src/features/auth/",
        "*.spec.ts",
        "*.stories.tsx",
        "*.stories.ts"
      ]
    }
  ]
}